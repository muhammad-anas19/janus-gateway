general: {
    json = "indented"

    # Enable WebSocket server (required!)
    ws = true
    ws_port = 8188
    ws_ip = "0.0.0.0"

    # Disable secure WebSocket (Traefik handles TLS termination)
    wss = false

    # Logging
    ws_logging = "err,warn"
}

# CORS - Allow your frontend domains
cors: {
    allow_origin = "*"
}

admin: {
    admin_ws = false
}